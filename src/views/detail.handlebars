<div class="container my-4">
    <div class="row align-items-center align-self-center">
        <div class="col-md-5 offset-md-1">
            <img src={{product.thumbnail}} alt={{product.title}} class="img-fluid"/>           
        </div>
        <div class="col-md-5 text-center">
            <h2>{{product.title}}</h2>
            <p>{{product.descripcion}}</p>
            <h3>$ {{product.price.toLocaleString()}}</h3>
            <h5>Stock Disponible: {{product.stock}}</h5>
            <button class="btn btn-secondary" type="submit">Agregar al Carrito</button>
        </div>
    </div>
</div>